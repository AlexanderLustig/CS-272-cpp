#include <iostream>
using namespace std;

int main(){
    int a;
    int *aPtr;

    a = 7;
    aPtr = &a;

    cout << "The address of a is: " << & a << "\nThe value of aPtr is: " << aPtr;
    cout << "\n\nThe value of a is: " << a << "\nThe value of aPtr is: " << *aPtr;

    cout << endl;
    cout << "&*aPtr: " << &*aPtr << "\t aPtr" << *&aPtr << endl;

    return 0;
}
